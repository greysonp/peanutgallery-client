panelPadding = 15px
panelWidth = 300px

btnColor = #a0c0f0
btnHighlighColor = #a6c8f6
shadeDefault = #fff
shadeHighlight = #f6f6f6

// Colors
bkgColor = #eee
textColor = #89867e

.gifics-panel
    position fixed
    left -1 * panelWidth
    height 100%
    width 300px
    background-color bkgColor
    color textColor
    z-index 200000000
    box-shadow 0 0 10px 0 #000
    font-family 'Raleway-Regular', sans-serif
    text-align left
    letter-spacing 0

    .gifics-scroll
        height 100%
        overflow-y scroll


    h1, h2, h3
        font-family 'Raleway-Bold', sans-serif
        color textColor
        border none

    &>h1, &>h2, &>p
        padding panelPadding
        margin 0
    
    .gifics-sorry
        padding panelPadding

    &>h1
        font-size 28px

    &>h2
        font-size 24px

    li
        display block
        margin 0 
        padding panelPadding
        background-color bkgColor
        border-bottom 2px solid textColor

        p
            margin 0
            padding 0 0 0 0

    .gifics-groups, .gifics-pages
        li:hover, li:hover h1, li:hover h2, li:hover h3
            background-color textColor
            color bkgColor

    ul
        width 100%
        margin 0
        padding 0

    .gifics-groups h2 
        margin 0

    .gifics-pages, .gifics-comments
        h2, h3
            margin 0
        h3
            font-weight normal
            font-size 12px
            font-style italic
            opacity 0.8
        .gifics-body
            margin-top 5px
        
    .gifics-pages
        .gifics-body, .gifics-date
            padding-left panelPadding

    .gifics-btn
        display inline-block
        background-color textColor
        color bkgColor
        text-decoration none
        font-size 20px
        font-weight bold
        text-align center
        margin panelPadding 0 panelPadding panelPadding
        padding panelPadding
        border 2px solid textColor

        &:hover
            text-decoration none
            background-color bkgColor
            color textColor

    .gifics-back
        border-right 2px textColor
        &:hover
            opacity .75

    .gifics-textarea
        position absolute
        bottom 0
        width 100%
        border none
        border-top 4px solid textColor
        background-color white

    select 
        width 100%
        background transparent
        font-size 18px
        line-height 1
        border 2px solid textColor
        border-radius 0
        -webkit-appearance none
        padding panelPadding
        background-color textColor
        color bkgColor
        outline none
        &:hover
            background-color bkgColor
            color textColor
        $:focus
            outline none

.gifics-canvas
    width 100%
    height 100%
    position fixed
    left 0
    top 0
    z-index 200000000

.gifics-doodle
    position absolute
    z-index 199999999
